			<label for="username">Username(email):</label>
			<input type="email" name="username" required>
			<label for="realname">Realname:</label>
			<input type="text" name="realname" required>
			<label for="password">Password(at least 6 char):</label>
			<input type="password" minlength="6" name="password" required>
			<label for="password">Confirm password:</label>
			<input type="password" minlength="6" name="c-password" required>

			<div class="form-buttom">
				<button id="signup" type="button">Signup</button>
				<button id="login" type="submit">Login</button>
			</div>
		</form>
		<script src="/javascripts/jquery.js"></script>
		<script src="/javascripts/script.js"></script>
		<script src="/javascripts/login.js"></script>
	</body>
</html>
